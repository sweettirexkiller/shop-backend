{{# if products}}
    <div class="row">
        <div class="col-sm6 col-md-offset-3 col-md-6 col-sm-offset-3">
            <ul class="list-group">
                {{# each products}}
                    <li class="list-group-item">
                        <span class="badge">{{this.qty}}</span>
                        <strong>{{this.item.title}}</strong>
                        <span class="label label-success">{{this.price}}$</span>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
                                <span class="caret"></span>
                                Action
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="">Reduce by 1</a></li>
                                <li><a href="">Remove All</a></li>
                            </ul>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm6 col-md-offset-3 col-md-6 col-sm-offset-3">
            <strong>Total:{{totalPrice}} </strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm6 col-md-offset-3 col-md-6 col-sm-offset-3">
            <a class="btn btn-success" type="button" href="/checkout">Checkout</a>
        </div>
    </div>
{{else}}
    <div class="row">
        <div class="col-sm6 col-md-offset-3 col-md-6 col-sm-offset-3">
            <h2>No items in cart</h2>
        </div>
    </div>
{{/if}}

