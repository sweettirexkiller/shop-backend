<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success {{# if noMessage}}hidden{{/if}}">
            {{successMessage}}
        </div>
    </div>
</div>
{{# each products}}
    <div class="row">
        <div class="col-sm-6 col-md-6">
            <div class="card-deck">
                {{# each this}}
                    <div class="card">
                        <img class="card-img-top game-image" src="{{this.imagePath}}"
                             alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{this.title}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <p class="card-text">
                                <small class="text-muted">{{this.price}}$</small>
                            </p>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-primary pull-right">Add to cart</a>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
{{/each}}
